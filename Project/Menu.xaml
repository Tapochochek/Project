<Window x:Class="Project.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <DockPanel Margin="10">

        <!-- Заголовок сверху -->
        <TextBlock Text="Меню практик"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   DockPanel.Dock="Top"
                   Margin="0,10,0,20" />

        <!-- Центр: кнопки -->
        <UniformGrid Rows="2" Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Создание Wpf приложения" Margin="5" Height="62" FontSize="8" Click="Button_Click" />
            <Button Content="Страничный интерфейс" Height="62"  Margin="5" FontSize="8" Click="Button_Click_1"/>
            <Button Content="Загрузить изображение" Height="62" Margin="5" FontSize="8" Click="InstallImage"/>
            <Button Content="Посмотреть изображения" Height="62" Margin="5" FontSize="8" Click="ShowImage"/>
            <Button Content="Linq запрос" Height="62" Margin="5" Click="LINQ" />
            <Button Content="Crud для EF core" Height="62" Margin="5" Click="CRUD"/>
            <Button Content="Генерация QR" Height="62" Margin="5" Click="LoadQr"/>
            <Button Content="Migrations" Height="62" Margin="5" Click="Migrations"/>
        </UniformGrid>

    </DockPanel>
</Window>
