<Window x:Class="Project.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтвердите, что вы не робот" Height="250" Width="300">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <Image x:Name="captchaImage" Height="80" Margin="5"/>
        <TextBox x:Name="tbInput" Margin="5" Height="30" FontSize="16"/>
        <Button Content="Подтвердить" Margin="5" Click="ValidateCaptcha"/>
    </StackPanel>
</Window>
